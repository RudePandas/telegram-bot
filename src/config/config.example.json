{
    "database": {
        "host": "localhost",
        "port": 3306,
        "user": "root",
        "password": "your_password",
        "db": "telegram_bots",
        "min_size": 10,
        "max_size": 100
    },
    "bot": {
        "token": "your_bot_token_from_botfather",
        "parse_mode": "HTML",
        "disable_web_page_preview": true,
        "drop_pending_updates": true
    },
    "logging": {
        "level": "INFO",
        "file": "logs/bot.log",
        "max_size": 10485760,
        "backup_count": 5
    },
    "error": {
        "notification_chat_id": "your_chat_id",
        "max_retries": 3,
        "retry_delay": 1
    }
} 